<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_hide_prices" model="ir.ui.view">
        <field name="name">res.config.settings.webshop.hide.prices</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='website']" position="inside">
                <block title="Hide Prices/Add to Cart for Public Users" id="hide_price_cart_public_user">
                    <setting id="livechat" string="Livechat" help="Turn on the option to Hide Prices/Add to Cart for public users.">
                        <field name="webshop_hide_prices" string="Hide Prices/Add to Cart for public users"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
